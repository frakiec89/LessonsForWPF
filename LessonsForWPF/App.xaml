<Application x:Class="LessonsForWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LessonsForWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style  x:Key="ButtonBase" TargetType="Button">
            <Setter Property="Background" Value="#ADD8E6" />
            <Setter Property="Margin" Value="25" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>


        <Style x:Key="ButtonMain" BasedOn="{StaticResource ButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="Brown" />
        </Style>

        <Style  BasedOn="{StaticResource ButtonBase}" TargetType="Button">
        </Style>

        <Style TargetType="StackPanel" >
            <Setter Property="Margin" Value="5"  />
        </Style>
    </Application.Resources>
</Application>
