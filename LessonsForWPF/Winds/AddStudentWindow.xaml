<Window x:Class="LessonsForWPF.Winds.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LessonsForWPF.Winds"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="450" Width="800">
    <Grid>
        <!--// track-->
        <StackPanel>
            <Button x:Name="btnBackMenu"
                    Margin="15"
                    Padding="15"
                    HorizontalAlignment="Left"
                    >назад в  меню</Button>

            <Border Margin="2" BorderBrush="Black" BorderThickness="2">
                <StackPanel Margin="10" Orientation="Horizontal">

                    <Label Margin="5"  >Введите имя</Label>
                    <TextBox x:Name="tbName" Margin="5" Width="150"></TextBox>
                </StackPanel>
            </Border>
            
            <Border Margin="2" BorderBrush="Black" BorderThickness="2">
                <StackPanel Margin="10" Orientation="Horizontal">

                    <Label Margin="5"  >Введите Фамилию</Label>
                    <TextBox x:Name="tbFerstName" Margin="5" Width="150"></TextBox>
                </StackPanel>
            </Border>
            
             <Border Margin="2" BorderBrush="Black" BorderThickness="2">
                <StackPanel Margin="10" Orientation="Horizontal">

                    <Label Margin="5"  >Введите Группу</Label>
                    <TextBox x:Name="tbGruipName" Margin="5" Width="150"></TextBox>
                </StackPanel>
            </Border>
            
            
            <Button x:Name="btnAddStydent"
                    Margin="15"
                    Padding="15"
                    HorizontalAlignment="Left"
                    >Добавить в  БД </Button>
            
            
        </StackPanel>
        
    </Grid>
</Window>
